<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- First layer: Border shape -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color inside the border -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Border color and thickness -->
            <corners android:radius="8dp" /> <!-- Rounded corners, optional -->
        </shape>
    </item>

    <!-- Second layer: Default spinner background to show arrow -->
    <item>
        <bitmap
            android:src="@android:drawable/btn_dropdown"
            android:gravity="end|center_vertical" /> <!-- Align dropdown arrow to right -->
    </item>

</layer-list>
